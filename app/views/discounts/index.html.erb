<h1>Discounts</h1>
<div>
<% @discounts.each do |discount| %>
  <p id="discount-<%= discount.id %>">
  Discount Number: <%= link_to(discount.id, merchant_discount_path(discount.merchant.id, discount.id)) %><br>
  Item Count Minimum: <%= discount.threshold %><br>
  Percent Discount: <%= (discount.discount * 100.0).round(2) %>%<br>
  <%= link_to("Delete Discount", merchant_discount_path(discount.merchant.id, discount.id), method: :delete) %><br>
  <br>
  </p>
<% end %>
</div>
<div>
<%= link_to("Create New Discount", new_merchant_discount_path(@discounts.first.merchant.id)) %><br>
</div>
<div id="holiday">
<h2>Upcoming Holidays:</h2>
<%= @holiday_facade.upcoming_holidays[0].name %><br>
<%= @holiday_facade.upcoming_holidays[1].name %><br>
<%= @holiday_facade.upcoming_holidays[2].name %><br>
</div>